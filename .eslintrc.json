{
  "env": {
      "browser": true, //browser global variables.
      "es6": true // enable all ECMAScript 6 features except for modules 
  },
  "extends": [
      "eslint:recommended", 
      "plugin:react/recommended" //the plugin will tell the linter that itâ€™s looking at React code, not regular JavaScript
  ],
  "parserOptions": {
      "ecmaFeatures": {
          "jsx": true //enable JSX
      },
      "ecmaVersion": 2018, //overrides the expected ECMAScript 5 syntax
      "sourceType": "module" //if your code is in ECMAScript modules
  },
  "plugins": [
      "react"
  ],
  "rules": {
      "indent": [
          "error",
          2
      ],
      "linebreak-style": [
          "error",
          "unix"
      ],
      "quotes": [
          "error",
          "double"
      ],
      "semi": [
          "error",
          "never"
      ]
  }
}